      </ImageView>
      <Label layoutX="401.0" layoutY="77.0" text="Settings" textFill="#020700">
         <font>
            <Font name="System Bold" size="51.0" />
         </font>
      </Label>
      <Label layoutX="246.0" layoutY="190.0" text="Volume">
         <font>
            <Font size="36.0" />
         </font>
         <effect>
            <Reflection bottomOpacity="0.22" fraction="0.54" topOpacity="0.65" />
         </effect>
      </Label>
      <Slider fx:id="volumeKey" layoutX="437.0" layoutY="195.0" prefHeight="43.0" prefWidth="293.0" value="10.0" />
      <Label layoutX="261.0" layoutY="299.0" text="Music">
         <font>
            <Font size="36.0" />
